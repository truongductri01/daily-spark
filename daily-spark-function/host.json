{
    "version": "2.0",
    "logging": {
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": true,
                "excludedTypes": "Request"
            },
            "enableLiveMetricsFilters": true
        }
    },
    "cors": {
        "allowedOrigins": [
            "http://localhost:3000"
        ],
        "allowedHeaders": [
            "Content-Type",
            "Authorization",
            "X-Requested-With"
        ],
        "allowedMethods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "OPTIONS"
        ],
        "allowCredentials": true
    }
}